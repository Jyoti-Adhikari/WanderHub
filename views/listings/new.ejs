<% layout('/layouts/boilerplate.ejs') -%>

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <form method="post" action="/listings" class="bg-white p-4 rounded shadow-sm w-100" style="max-width: 500px;">
    <h1 class="text-center mb-4">Create New Listing</h1>

    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" id="title" name="title" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea id="description" name="description" class="form-control" required></textarea>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Image URL</label>
      <input type="url" id="image" name="image" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input type="number" id="price" name="price" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input type="text" id="location" name="location" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="country" class="form-label">Country</label>
      <input type="text" id="country" name="country" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary w-100">Create Listing</button>
  </form>
</div>
